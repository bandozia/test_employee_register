<Project Sdk="Microsoft.NET.Sdk.Web">

	<PropertyGroup>
		<TargetFramework>netcoreapp3.1</TargetFramework>
	</PropertyGroup>

	<ItemGroup>
		<_CopyItems Include="..\WebApp\dist\**" />
	</ItemGroup>
	
	<Target Name="CopyLinkedContentFiles" BeforeTargets="Build" Condition="'$(Configuration)' == 'Release'">
		<Copy SourceFiles="@(_CopyItems)"
            DestinationFolder="$(OutputPath)\dist"
            SkipUnchangedFiles="true"
            OverwriteReadOnlyFiles="true" />
	</Target>

</Project>
